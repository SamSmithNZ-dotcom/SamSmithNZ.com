<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>M&amp;M Counter</title>
    <link rel="shortcut icon" sizes="32x32" href="~/MandMCounter/favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="padding-top:0px;">
    <div class="headerandlogo">
        <table class="PercentWidth100">
            <tr>
                <td class="PercentWidth100">
                    <a href="@Url.Action("Index", "MandMCounter")" class="headerText">
                        <img src="~/MandMCounter/MandM.png" alt="" class="headerImg" />
                        <span class="headerText">M&amp;M Counter</span>
                    </a>
                </td>
                @*<td align="right">
                        <div>
                            <a href="https://github.com/samsmithnz/MandMCounter" target="_blank">About&nbsp;</a>
                        </div>
                    </td>*@
            </tr>
        </table>
    </div>

    <div class="contentFrame">
        <div class="contentMain">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2000- @DateTime.Now.Year - SamSmithNZ.com
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>