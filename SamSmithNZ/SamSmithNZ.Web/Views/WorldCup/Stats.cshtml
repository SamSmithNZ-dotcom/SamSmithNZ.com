@using SamSmithNZ.Service.Models.WorldCup
@using SamSmithNZ.Web.Models.WorldCup
@model StatsViewModel
@{
    ViewBag.Title = "World cup stats";
    Layout = "~/Views/Shared/_LayoutWorldCup.cshtml";
}

<br />
<br />
<b>Average number of goals scored:</b>
@{
    int i = 0;
    foreach (StatsAverageTournamentGoals item in Model.StatsAverageTournamentGoalsList)
    {
        i++;
        if (item.TournamentCode == Model.TournamentCode)
        {
            <li><b>@i: @item.TournamentName: @item.AverageGoalsPerGame.ToString("0.00") (@item.TotalGoals goals scored in @item.TotalGamesCompleted games)</b></li>
        }
        else
        {
            <li>@i: @item.TournamentName: @item.AverageGoalsPerGame.ToString("0.00") (@item.TotalGoals goals scored in @item.TotalGamesCompleted games)</li>
        }
    }
}

